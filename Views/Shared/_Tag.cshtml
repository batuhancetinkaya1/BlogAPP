@model BlogApp.Entity.Tag

@{
    string tagColor = Model.Color.ToString().ToLower();
    string textColorClass = "";
    
    // Add text-dark class for light-colored tags
    if (tagColor == "info" || tagColor == "warning" || tagColor == "light")
    {
        textColorClass = "text-dark";
    }
}

<a href="/tags/@Model.Url" class="badge bg-@tagColor @textColorClass text-decoration-none">
    <i class="bi bi-tag-fill me-1"></i>@Model.Name
</a> 