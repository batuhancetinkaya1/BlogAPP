@model List<BlogApp.Entity.Post>

<div class="card">
    <div class="card-header">
        <h5 class="card-title">Son YazÄ±lar</h5>
    </div>
    <div class="card-body">
        <ul class="list-unstyled">
            @foreach (var post in Model)
            {
                <li class="mb-2">
                    <a href="/posts/@post.Url" class="text-decoration-none">
                        <div class="d-flex align-items-center">
                            <img src="/img/@post.Image" alt="@post.Title" class="img-fluid rounded me-2" style="width: 50px; height: 50px; object-fit: cover;">
                            <div>
                                <h6 class="mb-0">@post.Title</h6>
                                <small class="text-muted">@(post.PublishedOn?.ToString("dd.MM.yyyy") ?? "-")</small>
                            </div>
                        </div>
                    </a>
                </li>
            }
        </ul>
    </div>
</div> 