@model BlogApp.Entity.Tag

@{
    ViewData["Title"] = "Etiket Sil";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>
    <h3>Bu etiketi silmek istediğinizden emin misiniz?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Name)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Url)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Url)</dd>
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Color)</dt>
            <dd class="col-sm-10">
                <span class="badge bg-@Model.Color.ToString().ToLower()">@Model.Name</span>
            </dd>
        </dl>
        <form asp-action="Delete">
            <input type="hidden" asp-for="TagId" />
            <button type="submit" class="btn btn-danger">Sil</button>
            <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
        </form>
    </div>
</div> 