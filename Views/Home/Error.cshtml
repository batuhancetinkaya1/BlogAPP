@model BlogApp.Models.ViewModels.ErrorViewModel

@{
    ViewData["Title"] = "Hata";
}

<div class="text-center">
    <h1 class="text-danger">Hata</h1>
    <h2 class="text-danger">İsteğiniz işlenirken bir hata oluştu.</h2>

    @if (Model.ShowRequestId)
    {
        <p>
            <strong>Request ID:</strong> <code>@Model.RequestId</code>
        </p>
    }

    <h3>Ne yapabilirsiniz?</h3>
    <div class="mt-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Ana Sayfaya Dön</a>
        <a href="javascript:history.back()" class="btn btn-secondary">Geri Git</a>
    </div>
</div> 